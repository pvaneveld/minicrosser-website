{
    "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
    "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "ignores"]
      }
    ],
    "indentation": 2,
    "indentInsideParens": 2,
    "unit-whitelist": ["em", "rem", "s", "%", "px"],
    "block-closing-brace-newline-after": "always"
  }
}